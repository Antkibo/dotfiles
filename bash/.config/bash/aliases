alias pins="sudo pacman -S"
alias prem="sudo pacman -R"
alias paqa="pacman -Q"
alias paqe="pacman -Qe"
alias ..="cd .."
alias grep="grep --color=auto"
alias vim="nvim"
alias vi="nvim"
alias paup="sudo pacman -Syu"
alias pyserv="python -m http.server 8000"

if [[ `cat /etc/os-release | head -n 1 | cut -d "=" -f 2` == '"void"' ]]; then
    alias xins="doas xbps-install -S"
    alias poweroff="doas poweroff"
    alias reboot="doas reboot"
fi
